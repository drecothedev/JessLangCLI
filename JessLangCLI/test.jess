// Main game
var health = 10;
var playerIsLucky = false;
var turn = 1;

// Comment out the following line to see an error.
// var turn = 2;


// main game loop. Showcases while loops.
// Uncomment the commented code to check errors.
func life() {
    print "Welcome to life. Survive life and make time for hobbies.";
    
    while (health > 0) {
        print "---- Turn " + turn + " ----";
        print "Health: " + health;
        // print "Health: " + health
        if (playerIsLucky) {
            timeToWorkOnPersonalHobbies();
        } else {
            work();
        }

        turn = turn + 1;
    }

    print "Game over. Thanks for playing!";
}

// Function to showcase global variable mutability.
// Also shows if statement support
func timeToWorkOnPersonalHobbies() {
    
    health = health + 1;
    if (health > 12) {
        health = 12;
        // try to delete the closing bracket to see what error you get.
    }

    print "Finally some free time...";
    print "Health is now: " + health;

    // Luck flips
    playerIsLucky = false;
}

// function that shows if-else statements.
func work() {
    print "You go to work";
    if (health >= 3) {
        health = health - 2;
        print "oomf... -2 health.";
        print "your health is" + " "+ health;
        playerIsLucky = true;
    } else {
        print "that's life";
        print "You died!";
        health = 0;
    }
}

life();
